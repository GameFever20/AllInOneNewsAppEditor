<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <Spinner
        android:id="@+id/dialogue_newssource_source_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/source_list" />

    <EditText
        android:id="@+id/dialogue_newssource_heading_editText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Enter Heading here"
        android:imeOptions="normal"
        android:inputType="textMultiLine"
        android:minLines="3" />

    <EditText
        android:id="@+id/dialogue_newssource_article_editText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Enter Article here"
        android:imeOptions="normal"
        android:inputType="textMultiLine"
        android:minLines="5" />




</LinearLayout>